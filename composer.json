{
  "name": "tivins/php-common",
  "type": "library",
  "description": "PHP common classes",
  "minimum-stability": "dev",
  "license": "MIT",
  "authors": [
    {
      "name": "Tivins"
    }
  ],
  "require": {
    "php": ">=8.1",
    "erusev/parsedown": "1.7.4",
    "ext-mbstring": "*",
    "ext-curl": "*"
  },
  "require-dev": {
    "phpunit/phpunit": "^9.5",
    "php-coveralls/php-coveralls": "^2.5"
  },
  "autoload": {
    "psr-4": {
      "Tivins\\": "src/lib/Tivins"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "TivinsTest\\": "src/test/TivinsTest"
    }
  },
  "scripts": {
    "test": "vendor/bin/phpunit"
  }
}